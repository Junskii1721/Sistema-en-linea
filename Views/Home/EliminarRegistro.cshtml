@model Facturacion.Models.Productos

@{
    ViewBag.Title = "EliminarRegistro";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>


    <div class="Nombre">
        <h1 style="text-align:center">ELIMINAR REGISTRO</h1>

    </div>
    <style>
        .Nombre {
            background-color: darkolivegreen;
            color: antiquewhite;
            border-radius: 10px;
            font-family: Century;
            font-size: 20px;
        }

        .prodc {
            background-color: orange;
            width: 90px;
            height: 20px;
            font-family: Cambria;
            position: relative;
            left: 0px;
        }
    </style>

</body>
</html>


<h3 style="text-align:center" class="alert-danger">Esta Seguro que Desea eliminar este Registro? </h3>
<div>
    <h4 class="prodc">Productos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre_Del_Producto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_Del_Producto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cantidad_En_Inventario)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cantidad_En_Inventario)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio_Estandar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio_Estandar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Almacen.Nombre_De_La_Distribuidora)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Almacen.Nombre_De_La_Distribuidora)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar Registro" class="btn btn-danger" />
        </div>
    }
 
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-12">
        @Html.ActionLink("Regresar", "Inventario", null, new { @class = "btn btn-lg btn-primary" })

    </div>
</div>
